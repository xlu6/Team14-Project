<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeaderBoardActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="201dp"
        tools:layout_editor_absoluteY="359dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="34sp"
            android:gravity="center"
            android:text="Leader Board" />

        <TextView
            android:id="@+id/L1_highscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView2"
            android:layout_weight="1"
            android:textSize="34sp"
            android:gravity="center"
            android:text="0" />

        <TextView
            android:id="@+id/L2_highscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/L1_highscore"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/L3_highscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/L2_highscore"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/L4_highscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/L3_highscore"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/L5_highscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/L4_highscore"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/L6_highscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/L5_highscore"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textSize="34sp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>